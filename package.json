{
  "name": "vite-typescript-ssr-react",
  "version": "1.0.1",
  "description": "Boilerplate for a modern web stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/julianobailao/vite-typescript-solidjs-ssr"
  },
  "author": "JonLuca DeCaro",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "nodemon --watch server.ts --watch src/server --exec 'yarn node --experimental-specifier-resolution=node --loader ts-node/esm server.ts'",
    "dev:client": "vite --config vite.config.ts dev",
    "build": "tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "npm run test:client && npm run test:server",
    "vitest:client": "vitest --ui",
    "test:client": "vitest",
    "test:client:watch": "vitest --watch",
    "test:client:coverage": "vitest --coverage",
    "test:server": "vitest --config vitest.server.config.ts",
    "test:server:watch": "vitest --watch --config vitest.server.config.ts",
    "test:server:coverage": "vitest --coverage --config vitest.server.config.ts",
    "vitest:server": "vitest --ui --config vitest.server.config.ts",
    "serve": "yarn build && cross-env NODE_ENV=production node --experimental-modules --experimental-specifier-resolution=node dist/server.js",
    "serve:local": "vite serve",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "autoprefixer": "^10.4.7",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "express": "4.18.1",
    "jest-environment-jsdom": "^28.1.3",
    "nodemon": "^2.0.19",
    "serve-static": "^1.15.0",
    "solid-js": "^1.4.8",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.4.5",
    "@types/jest": "^28.1.6",
    "@types/node": "18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/ui": "^0.20.3",
    "concurrently": "7.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.3",
    "postcss": "8.4.14",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "solid-testing-library": "^0.3.0",
    "supertest": "^6.2.4",
    "tailwindcss": "3.1.6",
    "ts-jest": "^28.0.7",
    "typescript": "4.7.4",
    "vite": "3.0.2",
    "vite-plugin-solid": "^2.3.0",
    "vitest": "^0.20.3"
  }
}
