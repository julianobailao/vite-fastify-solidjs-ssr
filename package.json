{
  "name": "vite-typescript-ssr-react",
  "version": "1.0.1",
  "description": "Boilerplate for a modern web stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/julianobailao/vite-typescript-solidjs-ssr"
  },
  "author": "Juliano Bail√£o",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:server --config vite.config.ts",
    "dev:server": "nodemon --watch server.ts --watch src/server --exec 'ts-node server.ts'",
    "dev:client": "yarn build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "vitest",
    "test:client:watch": "vitest --watch",
    "test:client:coverage": "vitest --coverage",
    "teste:client:ui": "vitest --ui",
    "test:server": "vitest --config vitest.server.config.ts",
    "test:server:watch": "vitest --watch --config vitest.server.config.ts",
    "test:server:coverage": "vitest --coverage --config vitest.server.config.ts",
    "test:server:ui": "vitest --ui --config vitest.server.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:e2e:ui": "vite build && vitest --config vitest.e2e.config.ts --ui",
    "typecheck": "tsc --noEmit",
    "serve": "yarn build && cross-env NODE_ENV=production yarn ts-node ./server",
    "serve:local": "vite serve",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@fastify/middie": "^8.0.0",
    "@fastify/static": "^6.5.0",
    "@types/express": "^4.17.13",
    "autoprefixer": "^10.4.8",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "express": "4.18.1",
    "fastify": "^4.4.0",
    "fastify-vite": "^3.0.0-beta.24",
    "nodemon": "^2.0.19",
    "serve-static": "^1.15.0",
    "solid-js": "^1.4.8",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.4.5",
    "@types/node": "18.6.4",
    "@types/react": "^18.0.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "concurrently": "7.3.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.12",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-solid": "^0.7.1",
    "jsdom": "^20.0.0",
    "postcss": "8.4.16",
    "pptr-testing-library": "^0.7.0",
    "prettier": "^2.7.1",
    "puppeteer": "^16.1.0",
    "rimraf": "^3.0.2",
    "solid-testing-library": "^0.3.0",
    "supertest": "^6.2.4",
    "tailwindcss": "3.1.8",
    "typescript": "4.7.4",
    "vite": "3.0.4",
    "vite-plugin-solid": "^2.3.0",
    "vitest": "^0.21.0"
  }
}
